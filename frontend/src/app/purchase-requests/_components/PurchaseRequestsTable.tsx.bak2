                                // Конвертируем canvas в base64 PNG
                                logoBase64 = canvas.toDataURL('image/png');
                                resolve();
                              } else {
                                reject(new Error('Не удалось получить контекст canvas'));
                              }
                            } catch (err) {
                              reject(err);
                            }
                          };
