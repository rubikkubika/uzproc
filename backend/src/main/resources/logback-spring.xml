<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_DIR" value="logs"/>
    
    <!-- Имя файла с датой и временем старта приложения -->
    <timestamp key="STARTUP_TIMESTAMP" datePattern="yyyy-MM-dd-HH-mm-ss"/>
    <!-- Папка для логов текущего запуска -->
    <property name="LOG_SUBDIR" value="${LOG_DIR}/backend-${STARTUP_TIMESTAMP}"/>
    <!-- Полный путь к файлу лога внутри подпапки -->
    <property name="LOG_FILE" value="${LOG_SUBDIR}/backend-${STARTUP_TIMESTAMP}.log"/>
    
    <!-- Консольный аппендер -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Файловый аппендер с ротацией по размеру: максимум 100MB на файл, до 5 файлов -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <!-- Имя файла при ротации: backend-YYYY-MM-DD-HH-mm-ss.i.log -->
            <!-- Файлы остаются в той же подпапке -->
            <fileNamePattern>${LOG_FILE}.%i</fileNamePattern>
            <!-- Максимальное количество файлов для одного запуска: 5 (итого до 500MB на запуск) -->
            <minIndex>1</minIndex>
            <maxIndex>5</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <!-- Максимальный размер одного файла: 100MB -->
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Уровни логирования -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
    
    <logger name="com.uzproc" level="DEBUG"/>
    <logger name="com.uzproc.backend.service.PurchaseStatusUpdateService" level="INFO"/>
    <logger name="com.uzproc.backend.service.PurchaseRequestStatusUpdateService" level="DEBUG"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>
</configuration>












